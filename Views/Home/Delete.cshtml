@model LeagueOfLegendsMVC.Models.ChampionModel

@{
    ViewData["Title"] = "Delete Champion";
}

<h2>Delete Champion</h2>

<h3>Are you sure you want to delete this champion?</h3>
<div>
    <h4>Name: @Model.Name</h4>
    <h4>Role: @Model.Role</h4>
    <h4>Blue Essence: @Model.BlueEssence</h4>
    <h4>Riot Points: @Model.RiotPoints</h4>
    <h4>Image: <img src="@Model.Image" alt="@Model.Name" style="max-width: 100px; max-height: 100px;" /></h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="EditChampions">Back to List</a>
</form>
